<body>
    <div class="container">
        <h1>Vxp Key Generator</h1>
        <div id="key-display"></div>
        <button onclick="generateKey()">Generate New Key</button>
    </div>

    <script>
        function generateKey() {
            // Generate a random 8-character key with the "VXP_" prefix
            const key = "VXP_" + Math.random().toString(36).substring(2, 10).toUpperCase();
            document.getElementById("key-display").textContent = key;
        }
    </script>
